<arquillian xmlns="http://jboss.org/schema/arquillian"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://jboss.org/schema/arquillian
        http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
	<defaultProtocol type="Servlet 3.0" />

	<!-- <container qualifier="wildfly-as-remote"> <configuration> <property 
		name="managementAddress">127.0.0.1</property> <property name="managementPort">9999</property> 
		</configuration> </container> -->

	<engine>
		<property name="deploymentExportPath">target/</property>
	</engine>

	<container qualifier="wildfly-as-managed" default="true">
		<configuration>
			<!-- jbossHome can be replaced by JBOSS_HOME maven environmentVariable -->
			<!-- <property name="jbossHome">#{arquillian.serverHome}</property> -->
			<property name="outputToConsole">true</property>
			<property name="javaVmArguments">-Xrunjdwp:transport=dt_socket,address=8787,server=y,suspend=y -Xmx512m -XX:MaxPermSize=512m</property>
			<property name="allowConnectingToRunningServer">true</property>
		</configuration>
	</container>
</arquillian>